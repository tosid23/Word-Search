<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/levels_adapter_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_r5_white_bg_yellow_alert_border"
    android:padding="1dp">

    <ImageView
        android:id="@+id/completed_levels_adapter_image"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="3dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/completed_levels_adapter_title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="ContentDescription"
        tools:src="@drawable/god_blue" />

    <TextView
        android:id="@+id/completed_levels_adapter_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_r2_yellow_alert_bg"
        android:fontFamily="@font/quicksand_bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/md_white_1000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Level 1" />

    <TextView
        android:id="@+id/completed_levels_adapter_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/quicksand_bold"
        android:textAllCaps="true"
        android:textColor="@color/md_blue_700"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/completed_levels_adapter_sub_title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Ramayana" />

    <TextView
        android:id="@+id/completed_levels_adapter_sub_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/quicksand_bold"
        android:textAllCaps="true"
        android:textColor="@color/md_cyan_400"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/completed_levels_adapter_decision_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="The Kings!" />

    <TextView
        android:id="@+id/completed_levels_adapter_decision_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/quicksand_medium"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        android:textAllCaps="true"
        android:textColor="@color/md_green_500"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:background="@drawable/rounded_r5_green_500_bg"
        tools:text="Completed!"
        tools:textColor="@color/md_white_1000" />


</androidx.constraintlayout.widget.ConstraintLayout>